---
import CallToAction from "./CallToAction.astro";
import Icon from "./Icon.astro";
---

<section class="content">
  <h2>Send Me a Message</h2><div
    class="w-full px-10 md:px-20 py-8 rounded-md flex flex-row center flex-wrap gap-2"
  >
    <CallToAction />
  </div>
</section>

<style>
  .content {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .content h2 {
    font-size: var(--text-lg);
  }

  .content p {
    color: var(--gray-400);
  }


  @media (min-width: 50em) {
    .box {
      border-radius: 1.5rem;
      padding: 2.5rem;
    }

    .content {
      display: grid;
      grid-template-columns: 1fr 80% ;
      gap: 1rem;
    }

    .content h2 {
      font-size: var(--text-2xl);
      align-self: center;
    }
    .md\:px-20 {
      padding-left: 5rem;
      padding-right: 5rem;
    }

    .py-8 {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    .px-10 {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }
    .rounded-md {
      border-radius: 0.375rem;
    }
    .gap-2 {
      gap: 0.5rem;
    }
    .center {
      text-align: left;
    }
    .flex-wrap {
      flex-wrap: wrap;
    }
    .flex-row {
      flex-direction: row;
    }
    .w-full {
      width: 100%;
    }
    .flex {
      display: flex;
    }
  }
</style>
